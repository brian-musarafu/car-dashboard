<t t-name="invoice.report_stuttafords_office_move">
    <t t-call="web.basic_layout">
         <style>
            div, p, span,strong, bold {
            font-size: 101% !important;
            }
        </style>
        <t t-foreach="docs" t-as="doc">
            <div class="page font-weight-bold" style="padding:40px;font-size: 105% !important;">
                 <img src="/invoice/static/src/img/new_trans.png" style="
                position: absolute !important;
                top: 300px;
                left: 0;
                bottom: 0;
                width: 1500px !important;
                height: 1770px !important;
                z-index: -1 !important;
                opacity: 0.1 !important;"/>
                <div class="top" style="font-size:16px;">
                    <div class="row">
                        <div class="col-6">
                            <img height="200px" t-att-src="image_data_uri(doc.company_id.logo_web)" class="img mx-auto d-block"/>
                        </div>
                        <div class="col-6 text-end">
                            <span><t t-esc="doc.company_id.name"/></span>
                            <span><t t-esc="doc.company_id.street"/></span>
                            <span><t t-esc="doc.company_id.street2"/></span>
                            <span><t t-esc="doc.company_id.phone"/></span>
                        </div>
                    </div>
                    <h4 class="text-center mt-2">OFFICE MOVE - QUOTATION</h4>
                </div>
                <br/><br/>
                <div class="refence">
                    <div class="text-left">
                        <span>Ref : <t t-esc="doc.partner_id.name"/></span><br/>
                        <t t-esc="doc.partner_id.contact_address_complete"/>
                        <br/><br/>
                        <br/><br/>
                        <u><t t-esc="doc.note"/></u><br/><br/>
                        <t t-esc="doc.note"/><br/><br/>
                    </div>
                </div>
                <div class="table">
                    <!-- PUT TABLE HERE -->
                    <table class="table table-striped">
                        <thead>
                            <th style="text-align: left;" class="col-2">Product/Service</th>
                            <th style="text-align: left;" class="col-6">Description</th>
                            <th style="text-align: left;" class="col-2">Quantity</th>
                            <th style="text-align: left;" class="col-2">Unit Price</th>
                            <th style="text-align: left;" class="col-2">Taxes</th>
                            <th style="text-align: left;" class="col-2">Total</th>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.order_line" t-as="line">
                                <tr style="font-size:15px;">
                                    <td>
                                        <span t-field="line.product_template_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.product_uom_qty"/>
                                    </td>
                                    <td>
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td>
                                        <span t-field="line.tax_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </tr>

                            </t>
                             <tr>
                                <td colspan="5" style="text-align: right;">TOTAL AMOUNT VAT(INCL):</td>
                                <td class="text-end"><strong>$ <span t-esc="doc.amount_total"/></strong></td>
                            </tr>
                           
                        </tbody>
                    </table>
                </div>
                <h4 class="text-start">COMPLIMENTARY SERVICES FOR YOU , OUR VALUED CLIENT</h4><br/>
                <ul>
                    <li>Colour Coding of Office Furniture for Accurate Relocating of Office Furniture.</li>
                    <li>Provision of Night Services if Job demands requires us to.</li>
                </ul>
                <div class="row">
                    <div class="col-6 p-2">
                        <h6 class="text-start">THIS PRICE INCLUDES:</h6>
                        <t t-esc="doc.x_prices_includes"/>
                    </div>
                    <div class="col-6 p-2">
                        <h6 class="text-start">THIS PRICE EXCLUDES:</h6>
                        <t t-esc="doc.x_prices_excludes"/>
                    </div>
                    <div class="col-6 p-2">
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 p-2">
                        <h6 class="text-start">PAYMENT TERMS AND DETAILS:</h6>
                        <t t-esc="doc.payment_term_id.name"/>
                    </div>
                    <div class="col-6 p-2">
                        <h6 class="text-start">USD ACCOUNT:</h6>
                        <t t-esc="doc.x_prices_excludes"/>
                    </div>
                    <div class="col-6 p-2">
                    </div>
                </div>
                <div class="terms">
                    <h6 class="text-start">TERMS AND CONDITIONS APPLY</h6><br/><br/>
                    <h5 class="text-start">OUR QUOTATION IS VALID FOR 30 DAYS ONLY FROM DATE OF QUOTATION.</h5>
                </div>
                <br/>
                <h3 class="text-start">ACCEPTANCE OF QUOTATION</h3>
                <h6>I/WE accept your quotation for the above services subject to your terms and conditions, a copy of
                which I/WE acknowledge receipt.</h6>
                <br/>
                <br/> 
                <div class="row">
                    <div class="col-6">
                        <h6><span>Signed :.............................................................................. </span></h6>
                    </div>
                    <div class="col-6">
                        <h6><span>Date :.............................................................................. </span></h6>
                    </div>
                </div>
                <br/>
                <br/>
                <h6>I/WE do/ do not require insurance (signed).......................................</h6>
                <br/>
                <br/>
                <span><h6>IMPORTANT:</h6> IF THIS SECTION IS NOT COMPLETED, INSURANCE IS TAKEN AS DECLINED AND THE CONSIGNMENT WILL BE MOVED AT OWNERS RISK</span>
                <br/>
                <br/>
                <h3 class="text-start"><u>QUALITY GUARANTEE</u></h3>
                <br/>
                <br/>
                <p>
                    Because there is no substitute for your valued office effects, Glens delivers them
                    in the right condition. Thank you for choosing your safest move with Glens Care.<br/><br/>
                    For any queries, clarifications, further information or anything else, please contact the
                    undersigned.<br/>
                    Yours Sincerely,<br/>
                    For and on behalf of Glens Care,
                </p>
                <br/>
                <br/>
                <div class="row">
                    <div class="col-6 text-start">
                        <span>Lorraine Mutsikwi</span><br/>
                        <span><strong>Moving Consultant</strong></span><br/>
                        <span>0784 454 011 </span><br/>
                        <span><strong>marketing@glens.co.zw</strong></span><br/>
                    </div>
                    <div class="col-6 text-start">
                        <span>Tonderai Manhando</span><br/>
                        <span><strong>Sales Manager</strong></span><br/>
                        <span>0774 746 185</span><br/>
                        <span><strong>tmanhando@glens.co.zw</strong></span><br/>
                    </div>
                </div>
                <div class="references">
                    <h3>REFERENCES</h3>

                </div>
                <div class="bottom">
                    <div class="row" style="padding:5rem;">
                        <div class="col-3 d-flex align-items-center justify-content-center">
                            <img style="height: 100px;width: 100px;object-fit: cover" class="img img-thumbnail" src="/invoice/static/src/img/faim.png"/>
                        </div>
                        <div class="col-3 d-flex align-items-center justify-content-center">
                            <img style="height: 100px;width: 100px;object-fit: cover" class="img img-thumbnail" src="/invoice/static/src/img/iata.png"/>
                        </div>
                        <div class="col-3 d-flex align-items-center justify-content-center">
                            <img style="height: 100px;width: 100px;object-fit: cover" class="img img-thumbnail" src="/invoice/static/src/img/iam.png"/>
                        </div>
                        <div class="col-3 d-flex align-items-center justify-content-center">
                            <img style="height: 100px;width: 100px;object-fit: cover" class="img img-thumbnail" src="/invoice/static/src/img/dnv.png"/>
                        </div>
                    </div>
                    <p class="text-center">www.glensremovals.com</p>
                </div>
            </div>
        </t>
    </t>
</t>